---
import { getAllStories } from '../utils/notion';

// Get all stories from Notion (already sorted by date, newest first)
const allStories = await getAllStories();

// Get the first three stories (or however many we have)
const featuredStory = allStories[0];
const secondStory = allStories[1] || allStories[0]; // Fallback to first if not enough
const thirdStory = allStories[2] || allStories[0];  // Fallback to first if not enough

// Only render if we have at least one story
if (!featuredStory) return;
---

<div class="container">
    <div class="tagline">
        <p>Where data tells the truth</p>
    </div>
    <div class="stories-grid">
        <a href={`/stories/${featuredStory.slug}/`} class="featured-story-link main-story">
            <div class="imgContainer">
                <img src={featuredStory.data.image} alt={featuredStory.data.title}/>
            </div>
            <div class="textContainer">
                <div class="infoContainer">
                    <p>{featuredStory.data.type}</p>
                    <p class="infoTag">{featuredStory.data.tag}</p>
                </div>
                <div>
                    <h1>{featuredStory.data.title}</h1>
                    <p>{featuredStory.data.description}</p>
                </div>
            </div>
        </a>
        <div class="side-stories">
            <a href={`/stories/${secondStory.slug}/`} class="featured-story-link side-story">
                <div class="imgContainer">
                    <img src={secondStory.data.image} alt={secondStory.data.title}/>
                </div>
                <div class="textContainer">
                    <div class="infoContainer">
                        <p>{secondStory.data.type}</p>
                        <p class="infoTag">{secondStory.data.tag}</p>
                    </div>
                    <div>
                        <h1>{secondStory.data.title}</h1>
                    </div>
                </div>
            </a>
            <a href={`/stories/${thirdStory.slug}/`} class="featured-story-link side-story">
                <div class="imgContainer">
                    <img src={thirdStory.data.image} alt={thirdStory.data.title}/>
                </div>
                <div class="textContainer">
                    <div class="infoContainer">
                        <p>{thirdStory.data.type}</p>
                        <p class="infoTag">{thirdStory.data.tag}</p>
                    </div>
                    <div>
                        <h1>{thirdStory.data.title}</h1>
                    </div>
                </div>
            </a>
        </div>
    </div>

</div>


<style>
    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
        padding: 100px 150px 100px 150px;
        box-sizing: border-box;
        gap: 30px;
        text-decoration: none;
        color: inherit;
        margin-top: 30px;
    }

    .tagline{
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .tagline p{
        color: #D45A1D;
        font-size: 20px;
        font-style: italic;
        font-weight: 400;
    }

    .stories-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        width: 100%;
        margin-top: 30px;
    }

    .main-story {
        display: flex;
        flex-direction: column;
    }

    .side-stories {
        display: flex;
        flex-direction: column;
        gap: 50px;
    }

    .featured-story-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
    }

    .featured-story-link:hover {
        opacity: 0.9;
    }

    .main-story .imgContainer {
        width: 100%;
    }

    .side-story{
        display: flex;
        flex-direction: row;
        gap: 20px;
    }

    .side-story .imgContainer {
        width: 260px;
        min-width: 260px;
        height: 197px;
    }

    .imgContainer img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 0px;
    }

    .textContainer .infoContainer{
        display: flex;
        flex-direction: row;
        justify-content: start;
        gap: 10px;
        font-size: 14px;
    }

    .textContainer .infoContainer .infoTag{
        color: #D45A1D;
    }

    .textContainer h1 {
        margin: 20px 0 10px 0;
        color: #1F2126;
        font-weight: 500;
    }

    .main-story .textContainer p {
        margin-top: 20px;
        color: #1F2126;
    }

    .textContainer p {
        margin: 5px 0;
        color: #1F2126;
    }

    /* Tablet styles */
    @media (max-width: 1024px) {
        .container {
            padding: 80px 60px 80px 60px;
            gap: 25px;
        }

        .stories-grid {
            gap: 40px;
        }

        .side-stories {
            gap: 40px;
        }

        .side-story .imgContainer {
            width: 220px;
            min-width: 220px;
            height: 167px;
        }

        .textContainer h1 {
            font-size: 1.8rem;
        }

        .tagline p {
            font-size: 18px;
        }
    }

    /* Mobile styles */
    @media (max-width: 768px) {
        .container {
            padding: 50px 20px 30px 20px;
            gap: 20px;
        }

        .stories-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .side-stories {
            gap: 30px;
        }

        .side-story {
            flex-direction: column;
        }

        .side-story .imgContainer {
            width: 100%;
            min-width: 100%;
            height: 250px;
        }

        .main-story .imgContainer {
            height: 300px;
        }

        .textContainer h1 {
            font-size: 1.5rem;
            margin: 15px 0 8px 0;
        }

        .textContainer p {
            font-size: 0.9rem;
        }

        .tagline p {
            font-size: 16px;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 30px 15px 20px 15px;
            gap: 15px;
        }

        .stories-grid {
            gap: 20px;
        }

        .side-stories {
            gap: 20px;
        }

        .main-story .imgContainer,
        .side-story .imgContainer {
            height: 220px;
        }

        .textContainer h1 {
            font-size: 1.3rem;
        }

        .textContainer p {
            font-size: 0.85rem;
        }
    }
</style>

<script>
    const featuredStoryLinks = document.querySelectorAll('.featured-story-link');
    featuredStoryLinks.forEach((link) => {
        link.addEventListener('click', () => {
            if (typeof window.posthog !== 'undefined') {
                window.posthog.capture('story_click', {
                    story_title: link.querySelector('h1')?.textContent || 'Unknown',
                    story_type: 'featured',
                    story_url: link.getAttribute('href')
                });
            }
        });
    });
</script>