---
import { stories } from '../../stories.js';

// Get the newest story (first in array)
const featuredStory = stories[0];
const storyNumber = 1; // First story is #1
---

<a href={`/stories${featuredStory.url}/`} class="container">
    <div class="imgContainer">
        <img src={featuredStory.image} alt={featuredStory.title}/>
    </div>
    <div class="textContainer">
        <div class="infoContainer">
            <p>#{storyNumber}</p>
            <p>{featuredStory.date}</p>
        </div>
        <div>
            <h1>{featuredStory.title}</h1>
            <p>{featuredStory.description}</p>
        </div>
    </div>
</a>

<style>
    .container{
        display: flex;
        flex-direction: row;
        width: 100%;
        padding: 100px 100px 50px 100px;
        box-sizing: border-box;
        gap: 30px;
        text-decoration: none;
        color: inherit;
    }
    .container:hover {
        opacity: 0.9;
    }
    .imgContainer{
        width: 100%;
        height: 450px;
    }
    .imgContainer img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;

    }
    .textContainer .infoContainer{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }
    .textContainer h1 {
        margin: 20px 0 10px 0;
        color: #EEF0E0;
    }
    .textContainer p {
        margin: 5px 0;
        color: #EEF0E0;

    }
</style>