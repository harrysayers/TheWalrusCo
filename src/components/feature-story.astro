---
import { stories } from '../../stories.js';

// Get the newest story (first in array)
const featuredStory = stories[0];
const storyNumber = 1; // First story is #1
---

<a href={`/stories${featuredStory.url}/`} class="container">
    <div class="imgContainer">
        <img src={featuredStory.image} alt={featuredStory.title}/>
    </div>
    <div class="textContainer">
        <div class="infoContainer">
            <p>#{storyNumber}</p>
            <p>{featuredStory.date}</p>
        </div>
        <div>
            <h1>{featuredStory.title}</h1>
            <p>{featuredStory.description}</p>
        </div>
    </div>
</a>

<style>
    .container{
        display: flex;
        flex-direction: row;
        width: 100%;
        padding: 100px 100px 50px 100px;
        box-sizing: border-box;
        gap: 30px;
        text-decoration: none;
        color: inherit;
    }
    .container:hover {
        opacity: 0.9;
    }
    .imgContainer{
        width: 100%;
        height: 450px;
    }
    .imgContainer img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;

    }
    .textContainer .infoContainer{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }
    .textContainer h1 {
        margin: 20px 0 10px 0;
        color: #EEF0E0;
    }
    .textContainer p {
        margin: 5px 0;
        color: #EEF0E0;
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            padding: 50px 20px 30px 20px;
            gap: 20px;
        }

        .imgContainer {
            height: 300px;
        }

        .textContainer h1 {
            font-size: 1.5rem;
            margin: 15px 0 8px 0;
        }

        .textContainer p {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 30px 15px 20px 15px;
            gap: 15px;
        }

        .imgContainer {
            height: 250px;
        }

        .textContainer h1 {
            font-size: 1.3rem;
        }

        .textContainer p {
            font-size: 0.85rem;
        }
    }
</style>