---
import Logo from '../assets/footer-logo.svg';
import { Image } from 'astro:assets';
---

<footer class="footer">
    <div class="footer-content">
        <div class="footer-columns">
            <div class="footer-column">
                <h4>Other stuff</h4>
                <ul>
                    <li><a href="https://www.axamattic.com/" target="_blank">Axamattic</a></li>
                    <li><a href="/about">About us</a></li>
                    <li><a href="/privacy">Privacy policy</a></li>
                </ul>
            </div>
            
            <div class="footer-column">
                <h4>Follow Us</h4>
                <ul>
                    <li><a href="https://www.instagram.com/thewalrus_co/" target="_blank">Instagram</a></li>
                    <li><a href="https://bsky.app/profile/thewalrusco.bsky.social" target="_blank">Bluesky</a></li>
                    <li><a href="https://www.youtube.com/@TheWalrusCo" target="_blank">Youtube</a></li>
                </ul>
            </div>
        </div>
        
        <div class="footer-logo">
            <Image src={Logo} alt="The Walrus Co" />
        </div>
        
        <div class="footer-legal">
            <p>The Walrus Co is a part of Axamattic. Axamattic Limited is a company registered in England and Wales (Company No. 12731987).</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        background-color: #181A1E;
        color: #EEF0E0;
        padding: 60px 100px 30px 100px;
        box-sizing: border-box;
    }
    
    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .footer-columns {
        display: flex;
        gap: 100px;
        align-items: flex-start;
        justify-content: flex-end;
        margin-bottom: 50px;
    }
    
    .footer-column {
        flex: 0 0 auto;
    }
    
    .footer-column h4 {
        font-size: 1.2rem;
        margin-bottom: 20px;
        color: #EEF0E0;
        font-family: 'Barrio', system-ui;
    }
    
    .footer-column ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .footer-column li {
        margin-bottom: 12px;
    }
    
    .footer-column a {
        color: #EEF0E0;
        text-decoration: none;
        font-size: 0.95rem;
        transition: opacity 0.2s ease;
    }
    
    .footer-column a:hover {
        opacity: 0.7;
    }
    
    .footer-logo {
        text-align: center;
        margin-bottom: 40px;
    }
    
    .footer-logo img {
        height: 80px;
        width: auto;
    }
    
    .footer-legal {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #333;
    }
    
    .footer-legal p {
        margin: 0;
        font-size: 0.85rem;
        color: #999;
        line-height: 1.4;
    }
    
    @media (max-width: 768px) {
        .footer {
            padding: 40px 20px 20px 20px;
        }
        
        .footer-columns {
            flex-direction: column;
            gap: 40px;
            margin-bottom: 40px;
        }
        
        .footer-logo img {
            height: 50px;
        }
        
        .footer-legal p {
            font-size: 0.8rem;
        }
    }
</style>