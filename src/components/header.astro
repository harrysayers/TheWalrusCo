---
import Logo from '../assets/logo.svg';
import { Image } from 'astro:assets';
---

<div class="container">
    <!-- <p>A data journalism publication exploring all facets of culture and society &#x1F3F4;&#x200D;&#x2620;&#xFE0F; &#x1F4F0;</p> -->
    <a href="/" class="logo-link">
        <Image src={Logo} alt="" />
    </a>
    <nav class="nav-buttons">
        <a class="nav-button orange-button" href="#footer">
          Join email list
        </a>
    </nav>
</div>

<style>
    .container {
        position: fixed;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        margin: 0 auto;
        padding: 24px 100px 24px 100px;
        box-sizing: border-box;
        background-color: #F8F6E7; /* Dark background like in image */
        border-bottom: solid 1px #181A1E;
        z-index: 10;
        top: 0;
    }

    /* Left item (description) */
    .container p {
        flex: 1;
        margin: 0;
        color: #fff;
        font-size: 16px;
        text-align: left;
        max-width: 340px;
    }

    /* Center item (logo) - this will always stay centered */
    .logo-link {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    .logo-link img {
        height: 50px; /* Adjust logo size as needed */
        width: auto;
        display: block;
    }

    /* Right item (nav buttons) */
    .nav-buttons {
        display: flex;
        gap: 15px;
        margin-left: auto;
    }

    .nav-button {
        padding: 10px;
        background-color: #EEF0E0;
        border: none;
        color: #EEF0E0;
        font-size: 14px;
        cursor: pointer;
        font-family: 'Roboto', system-ui;
        font-weight: 500;
        text-decoration: none;
    }

    .orange-button{
        background-color: #D45A1D;
    }

    .nav-button:hover {
        color: #1F2126;
    }

    @media (max-width: 1080px) {
        .container p {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .container {
            padding: 20px;
            flex-direction: column;
            gap: 20px;
            position: relative;
        }

        .logo-link {
            position: static;
            transform: none;
            order: 1;
        }

        .logo-link img {
            height: 40px;
        }

        .nav-buttons {
            order: 3;
            width: 100%;
            margin: 0;
            gap: 10px;
        }

        .nav-button {
            flex: 1;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 15px;
            gap: 15px;
        }

        .container p {
            font-size: 12px;
        }

        .logo-link img {
            height: 35px;
        }
    }

</style>