---
import { getAllStories } from '../utils/notion';

// Get all stories from Notion
const allStories = await getAllStories();

// Get all stories except the first three (which are featured)
const gridStories = allStories.slice(3);
---

<div class="grid-container">
    <h1>All publications</h1>
    <div class="grid">
        {gridStories.map((story) => (
            <a href={`/stories/${story.slug}/`} class="story-card grid-story-link" data-story-title={story.data.title} data-story-url={story.slug}>
                <div class="story-image">
                    <img src={story.data.image} alt={story.data.title} />
                </div>
                <div class="story-content">
                    <div class="story-meta">
                        <p>{story.data.type}</p>
                        <p class="infoTag">{story.data.tag}</p>
                    </div>
                    <h3>{story.data.title}</h3>
                    <p>{story.data.description}</p>
                </div>
            </a>
        ))}
    </div>
</div>

<style>
    h1{
        color: #D45A1D;
        font-weight: 500;
        font-size: 24px;
        margin-bottom: 50px;
    }
    .grid-container {
        padding: 0px 150px 100px 150px;
        box-sizing: border-box;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 40px;
    }

    .story-card {
        display: block;
        text-decoration: none;
        color: inherit;
        border-radius: 0px;
        overflow: hidden;
    }

    .story-card:hover {
    }

    .story-image {
        width: 100%;
        height: 250px;
        overflow: hidden;
        border-radius: 0px;
    }

    .story-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .story-content {
        padding: 0px;
    }

    .story-meta {
        display: flex;
        justify-content: start;
        font-size: 14px;
        color: #1F2126;
        margin-bottom: 10px;
        margin-top: 10px;
        gap: 10px;
    }

    .story-meta .infoTag{
        color: #D45A1D;
    }

    .story-card h3 {
        margin: 10px 0;
        font-size: 26px;
        line-height: 1.4;
        color: #1F2126;
    }

    .story-card p {
        margin: 10px 0 0 0;
        color: #1F2126;
        font-size: 0.9rem;
        line-height: 1.5;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
                line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    /* Tablet styles */
    @media (max-width: 1024px) {
        .grid-container {
            padding: 0px 60px 80px 60px;
        }

        .grid {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
        }

        .story-image {
            height: 220px;
        }

        .story-card h3 {
            font-size: 24px;
        }
    }

    /* Mobile styles */
    @media (max-width: 768px) {
        .grid-container {
            padding: 30px 20px;
        }

        .grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .story-image {
            height: 250px;
        }

        .story-card h3 {
            font-size: 22px;
        }
    }

    @media (max-width: 480px) {
        .grid-container {
            padding: 20px 15px;
        }

        .grid {
            gap: 25px;
        }

        .story-image {
            height: 200px;
        }

        .story-card h3 {
            font-size: 20px;
        }
    }
</style>

<script>
    const gridStoryLinks = document.querySelectorAll('.grid-story-link');
    gridStoryLinks.forEach(link => {
        link.addEventListener('click', () => {
            if (typeof window.posthog !== 'undefined') {
                window.posthog.capture('story_click', {
                    story_title: link.dataset.storyTitle || 'Unknown',
                    story_type: 'grid',
                    story_url: link.dataset.storyUrl || link.getAttribute('href')
                });
            }
        });
    });
</script>